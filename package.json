{
  "name": "azure-network-mapper",
  "version": "1.0.0",
  "description": "Azure Network Topology Mapper - Desktop Application",
  "author": "schylerchase",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "test": "jest",
    "build": "electron-builder --win",
    "build:all": "electron-builder --win --linux"
  },
  "build": {
    "appId": "com.schylerchase.azure-network-mapper",
    "productName": "Azure Network Mapper",
    "files": [
      "index.html",
      "main.js",
      "main-utils.js",
      "preload.js",
      "export-azure-data.sh"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        },
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "linux": {
      "target": ["AppImage"],
      "category": "Utility"
    }
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.1.8",
    "jest": "^29.7.0"
  }
}
